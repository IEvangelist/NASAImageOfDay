@page "/images"

<h1 class="text-6xl m-6 text-gray-800">Astronomy Picture of the Day</h1>

<div class="text-center">
    <input class="border-4 rounded m-6 p-6 h-16 w-1/3 border-purple-300" 
           placeholder="Search by title"
           @bind-value="_searchText"/>
    <button class="w-32 text-white font-bold p-4 bg-purple-500 
            rounded text-2xl hover:bg-purple-600"
            @onclick="HandleSearch">Search</button>
</div>

@if (ImageList is null)
{
    <p>Getting the images...</p>
}
else
{
    <div class="p-2 grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3">
        @foreach (var image in ImageList)
        {
            <ImageCard ImageDetails="image" />
        }
    </div>
}

